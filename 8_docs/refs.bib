	journal = {Journal of Animal Ecology},
	author = {Schmid-Hempel, Regula and Eckhardt, Michael and Goulson, David and Heinzmann, Daniel and Lange, Carlos and Plischuk, Santiago and Escudero, Luisa R. and Salathé, Rahel and Scriven, Jessica J. and Schmid-Hempel, Paul},
	year = {2014},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2656.12185},
	keywords = {Bombus, pollinator, Nosema, Crithidia, genetics, Argentina, Chile, invasion, Patagonia},
	pages = {823--837},
	file = {Full Text PDF:/Users/jenna1/Zotero/storage/6N642WFZ/Schmid-Hempel et al. - 2014 - The invasion of southern South America by imported.pdf:application/pdf;Snapshot:/Users/jenna1/Zotero/storage/XS8NJE5Y/1365-2656.html:text/html},
}

@article{grixtiDeclineBumbleBees2009,
