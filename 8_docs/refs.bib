	author = {Klein, Alexandra-Maria and Steffan-Dewenter, Ingolf and Tscharntke, Teja},
	month = may,
	year = {2003},
	pmid = {12803911},
	pmcid = {PMC1691323},
	pages = {955--961},
	file = {PubMed Central Full Text PDF:/Users/jenna1/Zotero/storage/W6MVHP28/Klein et al. - 2003 - Fruit set of highland coffee increases with the di.pdf:application/pdf},
}

