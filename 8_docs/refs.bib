	pages = {1--23},
	file = {Fahrig - 2017 - Ecological Responses to Habitat Fragmentation Per .pdf:/Users/jenna1/Zotero/storage/JSDX27QA/Fahrig - 2017 - Ecological Responses to Habitat Fragmentation Per .pdf:application/pdf},
